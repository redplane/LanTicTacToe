<Window x:Class="ClientLayer.GUI.Dialogs.CreateGameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:ClientLayer.ViewModels"
        mc:Ignorable="d"
        Title="Start as host" 
        Height="200" 
        Width="500">

    <Window.DataContext>
        <viewModel:CreateGameViewModel x:Name="CreateGameViewModel"/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <VirtualizingStackPanel>
            <TextBlock Text="Server port"/>
            <TextBox Text="{Binding ServerPort}"></TextBox>
            <TextBlock Margin="0, 30, 0, 0"
                       Text="{Binding ErrorMessage}"
                       TextAlignment="Center"
                       Foreground="Red"
                       FontWeight="Heavy"/>
        </VirtualizingStackPanel>

        <Button Grid.Row="1"
                Height="32"
                Width="64">
            Start
        </Button>
    </Grid>
</Window>
